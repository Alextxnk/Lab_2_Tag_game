doctype html
html(lang="ru") 
    head
        meta(charset="utf-8")
        title Fifteen
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/reset.css")
        link(rel="stylesheet" href="/css/index.css")
    body
        - var values = new Array(16).fill(0).map((item, index) =>  index + 1);
        .page 
            h1 Игра в «Пятнашки»
            .timer_container 
                .timer 
                    .timeVal
                        span.minuteVal  00
                        span :
                        span.secondVal 00
            .game#game
                .fifteen#fifteen 
                    each val in values 
                        button.item(data-matrix-id=val)
                            span.itemVal= val
                button.button#shuffle Перемешать 
            button.button#show_table Таблица рекордов
        .container 
            table.table 
                thead 
                    tr 
                        th Name 
                        th Time 
                tbody 
                    tr 
                        th Alex
                        th 04:26 
        script(src="/js/index.js")
